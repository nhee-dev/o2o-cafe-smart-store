<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:fontFamily">@font/eland_choice_b</item>
        <item name="android:textColor">@color/coffee_dark_brown</item>

        <item name="android:progressTint">@color/coffee_point_red</item>
        <item name="android:progressBackgroundTint">@color/coffee_light_gray</item>
        <item name="android:numStars">5</item>
        <item name="android:max">10</item>
        <item name="android:stepSize">0.1</item>

        <!-- 커스텀 EditText -->
        <item name="edColor">@color/coffee_dark_brown</item>
        <item name="edColorHint">@color/coffee_light_gray</item>
        <item name="edFontFamily">@font/eland_choice_m</item>
        <item name="edBorderColor">@color/coffee_brown</item>

        <!-- 유저관련 기능 버튼-->
        <item name="btnBackground_user">@drawable/button_regular</item>
        <item name="btnBackgroundTint_user">@color/coffee_brown</item>
        <item name="btnTextColor_user">@color/white</item>

        <!-- 주문관련 기능 버튼 -->
        <item name="btnBackground_order">@color/coffee_menu_back</item>
        <item name="btnBackgroundTint_order">@color/coffee_point_red</item>
        <item name="btnTextColor_order">@color/white</item>

        <item name="txtColor">@color/coffee_point_red</item>
        <item name="txtSize">30sp</item>

        <item name="etcColor">@color/coffee_brown</item>
        <item name="backColor">@color/coffee_brown</item>
        <item name="backTextColor">@color/coffee_menu_back</item>
        <item name="backTextNot">#1C0A00</item>


    </style>

